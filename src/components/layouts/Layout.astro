---
import "../../styles/global.css";
import { Toaster } from "../ui/sonner";

interface Props {
  title?: string;
}

const { title = "10xCards - Fluent 2.0" } = Astro.props;

// Check if user is logged in
const { user } = Astro.locals;
const isLoggedIn = !!user;
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Aplikacja do generowania fiszek z wykorzystaniem Microsoft Fluent 2.0 Design System" />
    <meta name="theme-color" content="var(--colorBrandBackground)" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <!-- Navigation -->
    <nav class="border-b border-border bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
      <div class="container mx-auto px-fluent-xl">
        <div class="flex h-16 items-center justify-between">
          <div class="flex items-center gap-fluent-xl">
            <a href="/" class="text-title text-brand font-semibold hover:opacity-80 transition-opacity">
              10xCards
            </a>
            {isLoggedIn && (
              <div class="hidden md:flex items-center gap-fluent-l">
                <a 
                  href="/generations" 
                  class="text-body text-foreground hover:text-brand transition-colors px-3 py-2 rounded-fluent-md hover:bg-subtle"
                >
                  Generuj fiszki
                </a>
                <a 
                  href="/my-cards" 
                  class="text-body text-foreground hover:text-brand transition-colors px-3 py-2 rounded-fluent-md hover:bg-subtle"
                >
                  Moje fiszki
                </a>
              </div>
            )}
          </div>

          <div class="flex items-center gap-fluent-m">
            {!isLoggedIn ? (
              <>
                <a 
                  href="/auth/login"
                  class="text-body text-foreground hover:text-brand transition-colors px-4 py-2 rounded-fluent-md hover:bg-subtle"
                >
                  Zaloguj się
                </a>
                <a 
                  href="/auth/register"
                  class="text-body text-primary-foreground bg-brand hover:opacity-90 transition-opacity px-4 py-2 rounded-fluent-md font-medium"
                >
                  Zarejestruj się
                </a>
              </>
            ) : (
              <div class="flex items-center gap-fluent-m">
                <a 
                  href="/settings"
                  class="text-body text-foreground hover:text-brand transition-colors px-3 py-2 rounded-fluent-md hover:bg-subtle"
                >
                  Ustawienia
                </a>
                <form action="/api/auth/logout" method="POST" class="inline-block">
                  <button
                    type="submit"
                    class="text-body text-foreground hover:text-brand transition-colors px-4 py-2 rounded-fluent-md hover:bg-subtle"
                  >
                    Wyloguj się
                  </button>
                </form>
              </div>
            )}
          </div>
        </div>
      </div>
    </nav>

    <main class="min-h-screen">
      <slot />
    </main>
    <Toaster client:load />
  </body>
</html>

<style>
  html {
    font-family: var(--fontFamilyBase);
    scroll-behavior: smooth;
  }
  
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
  
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
    background-color: var(--colorNeutralBackground1);
    color: var(--colorNeutralForeground1);
    font-size: var(--fontSizeBase400);
    line-height: var(--lineHeightBase400);
  }
</style>
