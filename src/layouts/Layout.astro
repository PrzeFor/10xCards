---
import "../styles/global.css";
import { Toaster } from "../components/ui/sonner";

interface Props {
  title?: string;
}

const { title = "10xCards - Fluent 2.0" } = Astro.props;
---

<!doctype html>
<html lang="pl" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Aplikacja do generowania fiszek z wykorzystaniem Microsoft Fluent 2.0 Design System" />
    <meta name="theme-color" content="var(--colorBrandBackground)" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <main class="min-h-screen">
      <slot />
    </main>
    <Toaster client:load />
  </body>
</html>

<style>
  html {
    font-family: var(--fontFamilyBase);
    scroll-behavior: smooth;
  }
  
  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
  
  body {
    margin: 0;
    width: 100%;
    min-height: 100vh;
    background-color: var(--colorNeutralBackground1);
    color: var(--colorNeutralForeground1);
    font-size: var(--fontSizeBase400);
    line-height: var(--lineHeightBase400);
  }
</style>
