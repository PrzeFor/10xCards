---
/**
 * Landing page for password reset redirect from Supabase
 * Extracts token from URL and redirects to the reset password form
 */
export const prerender = false;
---

<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Przekierowanie - 10xCards</title>
  <style>
    body {
      font-family: system-ui, -apple-system, sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }
    .loader {
      text-align: center;
    }
    .spinner {
      border: 3px solid rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      border-top: 3px solid white;
      width: 40px;
      height: 40px;
      animation: spin 1s linear infinite;
      margin: 0 auto 1rem;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="loader">
    <div class="spinner"></div>
    <p>Przekierowywanie...</p>
  </div>

  <script>
    // Extract token from URL hash or query parameters
    function extractToken() {
      // Check hash fragment (Supabase default for password recovery)
      const hash = window.location.hash.substring(1);
      const hashParams = new URLSearchParams(hash);
      
      // For password recovery, Supabase sends these parameters in the hash:
      // - access_token: The JWT token
      // - token_hash: The recovery token hash (this is what we need for verifyOtp)
      // - type: Should be "recovery"
      
      let token = hashParams.get('token_hash') || hashParams.get('access_token');
      const type = hashParams.get('type');
      
      // If not in hash, try query parameters
      if (!token) {
        const searchParams = new URLSearchParams(window.location.search);
        token = searchParams.get('token_hash') || 
                searchParams.get('access_token') || 
                searchParams.get('token');
      }
      
      // Validate that this is a recovery token
      if (token && type !== 'recovery') {
        console.warn('Token type is not recovery:', type);
      }
      
      return token;
    }

    // Get the token and redirect
    const token = extractToken();
    
    if (token) {
      // Redirect to the reset password form with token
      window.location.href = `/auth/reset-password/${token}`;
    } else {
      // No token found, redirect to forgot password page
      console.error('No reset token found in URL');
      window.location.href = '/auth/forgot-password';
    }
  </script>
</body>
</html>

